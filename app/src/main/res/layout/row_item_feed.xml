<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:id="@+id/cl_row_item_feed">

    <TextView
            android:id="@+id/feed_header"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_12dp"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_8dp"
    />

    <ImageView
            android:id="@+id/iv_feed"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="@dimen/dimen_180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feed_header"
            app:layout_constraintEnd_toStartOf="@+id/tv_feed"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
    />

    <TextView
            android:id="@+id/tv_feed"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_feed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_feed"
            app:layout_constraintBottom_toBottomOf="@id/iv_feed"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:visibility="visible"
    />

    <TextView
            android:id="@+id/tv_feed_details"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/feed_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_20dp"
            android:fontFamily="sans-serif"
            android:visibility="gone"
    />

    <ImageView
            android:id="@+id/iv_feed_details"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@+id/feed_header"
            android:visibility="gone"
    />

    <Button
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unlike"
            android:background="@drawable/rounded_corner_blue"
            android:textColor="@android:color/white"
            android:fontFamily="casual"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/tv_details"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/btn_like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_like"
            app:layout_constraintBottom_toBottomOf="@+id/btn_like"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/dimen_10dp"
    />

    <View
            android:id="@+id/view"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_1dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/colorLightGray"
            android:layout_marginBottom="@dimen/dimen_10dp"
    />
    <android.support.constraint.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="iv_feed,tv_feed,tv_feed_details,iv_feed_details"/>


</android.support.constraint.ConstraintLayout>